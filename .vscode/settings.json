{
  // —— Python：Ruff 作为格式化器 + 修复器 + import 排序 ——
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  // —— Ruff 插件开关 ——
  "ruff.enable": true,             // 启用 Ruff
  "ruff.format.enable": true,      // 允许 Ruff 做格式化
  "ruff.fixAll": true,             // 保存时自动修复能修复的问题

  // —— 项目行长与标尺，与 .ruff.toml 对齐 ——
  "editor.wordWrapColumn": 100,
  "editor.rulers": [100],

}
