{
  "_schema_version": "1.0",
  "ui.button.label.v1": {
    "description": "通用UI按钮标签文案",
    "schema_ref": "schemas/ui/button_label_v1.json",
    "keys_minimal": ["view_id", "button_id"],
    "reuse_policy": {
      "strict": false,
      "ignore_fields": [],
      "normalize": {},
      "include_source_fields": ["text"]
    }
  },
  "game.item.description.v2": {
    "description": "游戏内物品的描述文本",
    "schema_ref": "schemas/game/item_description_v2.json",
    "keys_minimal": ["item_id", "game_version"],
    "reuse_policy": {
      "strict": false,
      "ignore_fields": [],
      "normalize": {
        "game_version": "major_minor"
      },
      "include_source_fields": ["text", "tooltip"]
    }
  },
  "docs.error_message.v1": {
    "description": "需要精确翻译的系统错误信息",
    "schema_ref": "schemas/docs/error_message_v1.json",
    "keys_minimal": ["error_code"],
    "reuse_policy": {
      "strict": true,
      "include_source_fields": ["message"]
    }
  }
}